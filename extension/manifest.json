{
	"name": "Українські радіостанції",
	"description": "Програвач українських радіостанцій",
	"version": "0.3.1",
	"manifest_version": 3,
	"default_locale": "uk",
	"icons": {
		"16": "assets/icon16.png",
		"48": "assets/icon48.png",
		"128": "assets/icon128.png"
	},
	"permissions": [
		"offscreen",
		"storage"
	],
	"background": {
		"service_worker": "background.js"
	},
	"action": {
		"default_popup": "popup.html",
		"default_icon": {
			"16": "assets/icon16.png",
			"48": "assets/icon48.png",
			"128": "assets/icon128.png"
		}
	},
	"options_page": "options.html"
}